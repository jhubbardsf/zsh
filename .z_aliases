###
# FLAC -> ALAC
###
alias flac2alac='for name in **/*.flac; do ffmpeg -nostdin -i "$name" -c:a alac -c:v copy "${name%.*}.m4a"; done'

# Mount RPI SD CARD
alias mountrpi='sudo ext4fuse /dev/disk2s2 /Volumes/rpi -o allow_other'

